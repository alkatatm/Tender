<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Label for Liked Businesses -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Liked Businesses"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="8dp"/>

    <!-- Liked Businesses RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvLikedBusinesses"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Break between lists -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        android:layout_marginVertical="8dp"/>

    <!-- Label for Disliked Businesses -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Disliked Businesses"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="8dp"/>

    <!-- Disliked Businesses RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDislikedBusinesses"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
